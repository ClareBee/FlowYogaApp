<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.clareblackburne.yogaapp.PoseActivity">

    <ImageView
        android:id="@+id/poseImage"
        android:layout_width="297dp"
        android:layout_height="247dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/imageOfPose"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87"
        app:srcCompat="@android:drawable/gallery_thumb"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/namePose"
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/poseImage"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045"
        tools:text="Name of Pose" />

    <TextView
        android:id="@+id/durationPose"
        android:layout_width="126dp"
        android:layout_height="26dp"
        tools:text="Duration"
        app:layout_constraintLeft_toLeftOf="@+id/sanskritPose"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sanskritPose"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/poseImage"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/chakraPose"
        android:layout_width="74dp"
        android:layout_height="26dp"
        tools:text="Chakra"
        app:layout_constraintLeft_toLeftOf="@+id/durationPose"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toTopOf="@+id/poseImage"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/durationPose"
        android:layout_marginLeft="-20dp"
        app:layout_constraintVertical_bias="0.363" />

    <TextView
        android:id="@+id/sanskritPose"
        android:layout_width="182dp"
        android:layout_height="47dp"
        tools:text="Sanskrit Name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/namePose"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/poseImage"
        app:layout_constraintVertical_bias="0.047"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/editPose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.974"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="395dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/deletePoseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        android:onClick="deletePose"
        android:text="Delete"
        app:layout_constraintBottom_toTopOf="@+id/editPose"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintLeft_toRightOf="@+id/namePose"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="64dp"
        android:text="Sanskrit Name:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sanskritPose"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Duration:"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginLeft="31dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Chakra:"
        app:layout_constraintBottom_toTopOf="@+id/poseImage"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.017"
        android:layout_marginLeft="9dp" />

</android.support.constraint.ConstraintLayout>
