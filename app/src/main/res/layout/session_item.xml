<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="8dp"
    android:layout_height="match_parent"
    android:onClick="getSession"
    android:weightSum="1">

    <TextView
        android:id="@+id/sessionDay"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="139dp"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/sessionList"
        tools:layout_editor_absoluteX="5dp"
        tools:text="Day" />

    <TextView
        android:id="@+id/sessionList"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:textAppearance="@android:style/TextAppearance.Widget.TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="3dp"
        tools:text="Session Name" />

    <ImageView
        android:id="@+id/imageList"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:contentDescription="@string/listLotus"
        app:layout_constraintLeft_toRightOf="@+id/sessionList"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lotus3" />

    <ImageButton
        android:id="@+id/completeButtonList"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="57dp"
        android:layout_height="50dp"
        android:layout_marginLeft="86dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="@string/completeBtn"
        app:layout_constraintLeft_toRightOf="@+id/imageList"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/checkbox_off_background" />

</android.support.constraint.ConstraintLayout>